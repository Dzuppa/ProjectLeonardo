<mui:ModernWindow x:Class="MUIDemoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:local="clr-namespace:MUIDemoWPF"
        mc:Ignorable="d" ContentSource="Controls/Views/HomePage.xaml"
        Title="MainWindow" Height="350" Width="525"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="ModernUI Demo" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="HomePage" Source="Controls/Views/HomePage.xaml" />
                <mui:Link DisplayName="Page2" Source="Controls/Views/Page2.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
